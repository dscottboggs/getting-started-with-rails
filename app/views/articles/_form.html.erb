<%= form_with model: @article, local: true do |form| %>
  <%= render partial: "errors", locals: { model: @article } %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, class: "input"%>
  </p>
  <p>
    <%= form.label :text %> <br/>
    <%= form.text_area :text, class: "textarea" %>
  </p><br/>
  <p><%= form.submit class: "button is-primary" %></p>
<% end %>
